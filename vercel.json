{
    "version": 2,
    "builds": [
        {
            "src": "/client/package.json",
            "use": "@vercel/static-build",
            "config": {"buildCommand": "npm run build"}
        },
        {
            "src": "/server/package.json",
            "use": "@vercel/static-build",
            "config": {"buildCommand": "npm run build"}
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "/client/dist/$1"
        },
        {
            "src": "/api/(.*)",
            "dest": "/server/dist/$1"
        }
    ]
}